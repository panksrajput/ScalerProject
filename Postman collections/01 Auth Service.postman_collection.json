					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"    // Parse the JSON response body\r",
									"    var jsonData = pm.response.json();\r",
									"\r",
									"    // Check if access_token exists in the response and set it as a global variable\r",
									"    if (jsonData.accessToken) {\r",
									"        pm.globals.set(\"access_token\", jsonData.accessToken);\r",
									"        console.log(\"Access Token set:\", pm.globals.get(\"access_token\")); // For debugging\r",
									"    } else {\r",
									"        console.log(\"Access Token not found in response.\"); // For debugging\r",
									"    }\r",
									"\r",
									"    // Check if refresh_token exists in the response and set it as a global variable\r",
									"    if (jsonData.refreshToken) {\r",
									"        pm.globals.set(\"refresh_token\", jsonData.refreshToken);\r",
									"        console.log(\"Refresh Token set:\", pm.globals.get(\"refresh_token\")); // For debugging\r",
									"    } else {\r",
									"        console.log(\"Refresh Token not found in response.\"); // For debugging\r",
									"    }"
								],
